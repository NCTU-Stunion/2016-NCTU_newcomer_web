<% datas.each_with_index do |data, counter| %>
    <% if data[:img] != nil %>
        <% if counter%2 == 0 %>
            <% # image left %>
            <%= render 'club_info', :data => data, :category => category, :push => true %>
            <%= render 'club_img', :data => data, :category => category, :pull => true %>
        <% else %>
            <% # image right %>
            <%= render 'club_info', :data => data, :category => category, :push => false %>
            <%= render 'club_img', :data => data, :category => category, :pull => false %>
        <% end %>
    <% else %>
        <% # only render info %>
        <%= render 'club_info', :data => data, :category => category, :push => false %>
    <% end %>
<% end %>

