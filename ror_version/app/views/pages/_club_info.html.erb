<% if push %>
    <div class="col-sm-6 col-sm-push-6 text-col">
<% else %>
    <div class="col-sm-6 text-col">
<% end %>
    <h3><%= club[:name] %></h3>
    <hr>
    <section class="icons">
    <% if club[:fb] != nil %>
        <%= link_to club[:fb], :target => '_blank' do %>
            <p><i class="fa fa-facebook-official fa-lg"></i></p>
        <% end %>
    <% end %>
    <% if club[:web] != nil %>
        <%= link_to club[:web], :target => '_blank' do %>
            <p><i class="fa fa-chrome fa-lg"></i></p>
        <% end %>
    <% end %>
    <% if club[:pdf] != nil %>
        <%= link_to "pdf/#{category}/#{club[:pdf]}", :target => '_blank' do %>
            <p>PDF</p>
        <% end %>
    <% end %>
    <% if club[:group] != nil %>
        <%= link_to club[:group], :target => '_blank' do %>
            <p>新生</p>
        <% end %>
    <% end %>
    </section>
</div>

